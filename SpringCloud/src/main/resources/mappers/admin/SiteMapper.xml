<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.iof.spring.admin.Mapper.site">
	<!-- result Join Plots -->
	<resultMap type="joinPlot" id="JoinPlotResult">
		<result column="" property=""/>
		<result column="" property=""/>
	</resultMap>
	<!-- result Join Sites -->
	<resultMap type="joinSite" id="JoinSiteResult">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="Owner" property="Owner"/>
		<result column="createdAt" property="createdAt"/>
		<result column="updatedAt" property="updatedAt"/>
	</resultMap>
	<!-- Create Site -->
	<insert id="AdminCreateSite" parameterType="user">
		INSERT INTO sites (
			id, 
			name, 
			Owner,
			createdAt, 
			updatedAt
		) 
		VALUES (
			#{id}, 
			#{name}, 
			#{Owner}, 
			#{createdAt}, 
			#{updatedAt}
		)
	</insert>
	<!-- Count Site -->
	<select id="AdminCountSite" resultType="int">
		SELECT COUNT(id) 
		FROM sites 
	</select>
	<!-- Paging Site -->
	<select id="AdminPagingSite" parameterType="map" resultType="site">
		SELECT 
			id, 
			name, 
			Owner, 
			createdAt, 
			updatedAt 
		FROM 
			sites 
		ORDER BY id DESC 
		LIMIT 10 OFFSET #{page}
	</select>
	<!-- Delete Site -->
	<delete id="AdminDeleteSite" parameterType="map">
	
	</delete>
	
	<!-- Detail Site -->
	<select id="AdminDetailSite" parameterType="site" resultType="site">
		SELECT 
			id, 
			name, 
			Owner, 
			createdAt, 
			updatedAt 
		FROM 
			sites 
		WHERE id=#{id}
	</select>
</mapper>